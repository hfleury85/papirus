  <!-- //////////// CALCULADORA DE WASH OUT -->
  
  <!-- //////////////////////////////////////////////////////////////// -->

  <script>
    "use strict";
    
    function caluladora_washout() {
        let str_precon=document.getElementById("uh_precontraste");
        let str_postcon=document.getElementById("uh_poscontraste");
        let str_delayed=document.getElementById("uh_fasetardia");
        let str_washout_resultadoabsoluto=document.getElementById("washout_resultadoabsoluto");
        let str_washout_resultadorelativo=document.getElementById("washout_resultadorelativo");
        let str_washout_explicacao=document.getElementById("washout_explicacao");
        let str_washout_resultadorelativo_exp=document.getElementById("washout_resultadorelativo_exp");
        
        let uh_precontraste=parseFloat(str_precon.value);
        let uh_poscontraste=parseFloat(str_postcon.value);
        let uh_fasetardia=parseFloat(str_delayed.value);
        let washout_resultadoabsoluto=((uh_poscontraste-uh_fasetardia)/(uh_poscontraste-uh_precontraste)*100).toFixed(1);
        if (isNaN(washout_resultadoabsoluto)) {
            str_washout_resultadoabsoluto.innerHTML="&nbsp;";
            str_washout_explicacao.style.display='none';
        }
        else {
            str_washout_resultadoabsoluto.innerHTML=washout_resultadoabsoluto+"%";
            str_washout_explicacao.style.display='block';
            if (washout_resultadoabsoluto>=60) {
                let str_output=" O washout absoluto maior ou igual a 60% é compatível com Adenoma.";
                if (uh_precontraste>43) {
                    str_output=str_output+" </br>Vale observar que lesões não calcificadas, não hemorrágicas com atenuação maior que 43uh na fase sem contraste é suspeita de malignidade indepedente do resultado do washout.";
                }
                if ((uh_poscontraste>=120) && (uh_precontraste<70)) {
                    str_output=str_output+" A possibilidade de feocromocitama deve ser considerada face ao intenso realce ao meio de contraste.";
                }
                str_washout_explicacao.innerHTML=str_output;
            } else {
                let str_output="O washout absoluto menor ou igual a 60% é indeterminado.";
                if (uh_precontraste<10) {
                    str_output=str_output+"ontudo a baixa atenuação na fase sem contraste é sugestivo de Adenoma.";
                }
                str_washout_explicacao.innerHTML=str_output;
            }
        }
        let washout_resultadorelativo=((uh_poscontraste-uh_fasetardia)/uh_poscontraste*100).toFixed(1);
        
        if (isNaN(washout_resultadorelativo)) {
            str_washout_resultadorelativo.innerHTML="&nbsp;";
            str_washout_resultadorelativo_exp.style.display='none';
        }
        else {
            str_washout_resultadorelativo.innerHTML=washout_resultadorelativo+"%";
            str_washout_resultadorelativo_exp.style.display='block';
            if (washout_resultadorelativo>=40) {
                let str_output=" O washout relativo maior ou igual a 40% é compatível com adenoma.";
                if (uh_precontraste>43) {
                    str_output=str_output+" </br>Vale observar que lesões não calcificadas, não hemorrágicas com atenuação maior que 43uh na fase sem contraste é suspeita de malignidade indepedente do resultado do washout.";
                }
                if ((uh_poscontraste>=120) && (uh_precontraste<70)) {
                    str_output=str_output+" A possibilidade de feocromocitoma deve ser considerada face ao intenso realce ao meio de contraste.";
                }            
                str_washout_resultadorelativo_exp.innerHTML=str_output;
            } else {
                let str_output="O washout relativo menor que 40% tem aspecto indeterminado.";
                if (uh_precontraste<10) {
                    str_output=str_output+"Contudo a baixa atenuação na fase sem contraste é sugestivo de Adenoma.";
                }
                str_washout_resultadorelativo_exp.innerHTML=str_output;
            }
        }
    }
    </script>









